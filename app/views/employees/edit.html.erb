<h1> Edit Employee </h1>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %> <br></br>
    <%= f.text_field :first_name %><br></br>

    <%= f.label :last_name %><br></br>
    <%= f.text_field :last_name %><br></br>

    <%= f.label :alias %><br></br>
    <%= f.text_field :alias %><br></br>

    <%= f.label :title %><br></br>
    <%= f.text_field :title %><br></br>

    <%= f.label :office %><br></br>
    <%= f.select :office, ['Scranton', 'Stamford', 'Corporate']%><br></br>

    <%= f.label :img_url %><br></br>
    <%= f.text_field :img_url %><br></br>

    <%= f.label :dog %><br></br>
    <%= f.collection_select :dog_id, Dog.all, :id, :name %><br></br>

    <br></br>
    <%= f.submit "Edit My Info" %>
<% end  %>